modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "install n8n"
mode = "sequential"
author = 46816312

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install -g n8n"

[[workflows.workflow]]
name = "n8n config"
mode = "sequential"
author = 46816312

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "n8n start --config replit.n8n.json"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5678
externalPort = 3000

[[ports]]
localPort = 45573
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]
